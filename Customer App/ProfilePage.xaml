<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Customer_App.ProfilePage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout Spacing="25">

        <Frame Margin="0,50,0,0"
                WidthRequest="100"
               HeightRequest="100"
               CornerRadius="50" 
               Padding="0"
               IsClippedToBounds="True">
            <Image Source="user_avatar.png" Aspect="AspectFill" />
        </Frame>

        <Label x:Name="userEmailTxt" Margin="0,0,0,50" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>

        <Frame Margin="80,150,80,0">
            <Button Text="Sign Out" FontSize="20" FontAttributes="Bold" Clicked="OnSignOut"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>